<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/bg_main"
    android:padding="16dp"
    tools:context=".fragment.ResultsTrackingFragment">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/jost"
            android:gravity="center_horizontal"
            android:text="@string/tracking"
            android:textColor="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/resultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp" />

    <!-- Circular Progress -->
    <com.github.lzyzsd.circleprogress.ArcProgress
        android:id="@+id/circularProgress"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:arc_angle="360"
        app:arc_unfinished_color="@color/unfinished"
        app:arc_finished_color="@color/finished"
        app:arc_suffix_text="/10"
        android:layout_gravity="center_horizontal"
        app:arc_max="15"
        app:arc_progress="8"
        app:strokeWidth="20dp"/>

    <TextView
        android:id="@+id/congratulationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:fontFamily="@font/inter_medium" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sleepDurationRec"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/physicalActivityRec"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/stressLevelRec"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dailyStepsRec"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
